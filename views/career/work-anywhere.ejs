<!-- views/career/work-from-anywhere.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work from Anywhere Application</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Work from Anywhere Application</h1>
    </header>

    <form action="/careers/terms" method="get">
        <label for="partyName">Party Name (Required):</label>
        <input type="text" id="partyName" name="partyName" required>

        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="fullName">

        <label for="contactNumber">Contact Number (Required):</label>
        <input type="text" id="contactNumber" name="contactNumber" required>

        <label for="emailId">Email ID (Required):</label>
        <input type="email" id="emailId" name="emailId" required>

        <label for="resume">Resume Upload (Optional, .pdf format preferred):</label>
        <input type="file" id="resume" name="resume" accept=".pdf">

        <p>By submitting this form, you agree to our <a href="/careers/terms">Terms and Conditions</a>.</p>

        <button type="submit" class="btn">Submit</button>
    </form>
</body>
</html>
